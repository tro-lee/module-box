{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.ts", "graphs/codebase-graph", "graphs/explain-code-graph", "graphs/solution-graph"],
  "exclude": ["node_modules"]
}
