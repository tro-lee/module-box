{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Library: debug core.test.ts",
      "program": "${workspaceFolder}/test/core.test.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Library: debug llm.test.ts",
      "program": "${workspaceFolder}/test/llm.test.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "name": "Web: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run web:dev"
    },
    {
      "name": "Web: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000"
    },
  ],
  "compounds": [
    {
      "name": "Web: Compound",
      "configurations": ["Web: debug server-side", "Web: debug client-side"]
    }
  ]
}
