{
  "name": "module-toolbox",
  "scripts": {
    "anaylzer:build": "cd packages/anaylzer && bun run build",
    "api:dev": "cd packages/api && bun run --hot src/index.ts",
    "web:dev": "cd packages/web && bun run dev",
    "web:build": "cd packages/web && bun run build",
    "web:start": "cd packages/web && bun run start",
    "web:lint": "cd packages/web && bun run lint",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.2",
    "@happy-dom/global-registrator": "^17.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.16",
    "eslint": "^9.23.0",
    "fast-xml-parser": "^4.5.1",
    "husky": "^9.1.7",
    "@module-toolbox/lib": "workspace:*"
  },
  "workspaces": [
    "packages/*"
  ]
}
